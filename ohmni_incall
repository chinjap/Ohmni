<script src="https://app.ohmnilabs.com/api/Ohmni-incall.js" ></script>  
    <script>
    function setRedLight() {
      Ohmni.setLightColor(360, 100, 100);
    }
    function speakChineseEnabled() {
      Ohmni.setSpeechLanguage("zh-TW"); 
    }
    function speakChinese() {
      Ohmni.Ohmni.say("你好, 我是机器人");
    }    
    function speakChineseContinue() {
      Ohmni.setSpeechLanguage("zh-TW");Ohmni.Ohmni.say("你好, 我是机器人");
    }
    
    function speakEnglishEnabled() {
      Ohmni.setSpeechLanguage("en-US"); 
    }
    function speakEnglish() {
      Ohmni.Ohmni.say("hello, I am robot");
    }    
    function speakEnglishContinue() {
      Ohmni.setSpeechLanguage("en-US");Ohmni.Ohmni.say("hello, I am robot");
    }
        
    function setGreenLight() {
      Ohmni.setLightColor(123, 100, 100);
    }

    function setBlueLight() {
      Ohmni.setLightColor(240, 100, 100);
    }

    function move() {
      Ohmni.move(-500, 500, 5000);
    }

    function setNeckPosition() {
      Ohmni.setNeckPosition(650, 100);
    }

    function setNeckTorqueEnabled() {
      Ohmni.setNeckTorqueEnabled(1);
    }

    function setNeckTorqueDisabled() {
      Ohmni.setNeckTorqueEnabled(0);
    }

    function setURL(url) {
      Ohmni.showPageOnBot(url)
    }
    function setURL(url) {
      Ohmni.showGoogleOnBot(url)
    }
        
    function hidePage() {
      Ohmni.hidePageOnBot();
    }

    Ohmni.on('capi', function(msg) {
      console.log(msg);
    })
  </script>
</head>
<body>
